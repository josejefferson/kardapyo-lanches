<a href="/product/{{this.id}}" class="card bg-base-100 shadow-xl">
  <figure>
    <img class="object-cover w-full h-44" src="{{this.image}}" />
  </figure>
  <div class="card-body p-6">
    <h2 class="card-title">
      {{this.name}}
      {{#if (isNew this.createdAt)}}
        <div class="badge badge-secondary">NOVO</div>
      {{/if}}
    </h2>
    <p>{{this.description}}</p>
    <div class="font-bold">{{currency this.price}}</div>
    <div class="rating rating-xs">
      <input type="radio" name="rating-{{this.id}}" class="mask mask-star-2 bg-orange-400" />
      <input type="radio" name="rating-{{this.id}}" class="mask mask-star-2 bg-orange-400" />
      <input type="radio" name="rating-{{this.id}}" class="mask mask-star-2 bg-orange-400" />
      <input type="radio" name="rating-{{this.id}}" class="mask mask-star-2 bg-orange-400" checked />
      <input type="radio" name="rating-{{this.id}}" class="mask mask-star-2 bg-orange-400" />
    </div>
  </div>
</a>